{
    "compilerOptions": {
        "module": "es6",
        "target": "es2017",
        "lib": ["es2015"],
        "moduleResolution": "node",
        "outDir": "dist/",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ]
}